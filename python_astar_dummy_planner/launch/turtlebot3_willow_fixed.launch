<launch>
  <!-- Pick your TB3 model -->
  <arg name="model" default="$(optenv TURTLEBOT3_MODEL burger)" />

  <!-- Path to your custom Willow Garage world -->
  <arg name="world_file" default="$(find python_astar_dummy_planner)/worlds/willowgarage_fixed.world" />

  <!-- Load Gazebo with your world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_file)" />
  </include>

  <!-- Load TurtleBot3 URDF into parameter server -->
  <param name="robot_description"
         command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

  <!-- Start robot_state_publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <!-- Spawn TurtleBot3 at world origin -->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"
        args="-urdf -model turtlebot3 -param robot_description -x 0 -y 0 -z 0.1" />
</launch>
